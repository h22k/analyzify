# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar UUID
scalar Time
scalar JSON

type Event {
    eventID: UUID!
    userID: UUID!
    timestamp: Time!
    eventType: String!
    metadata: JSON!
}

input NewEvent {
    userID: UUID!
    eventType: String!
    metadata: JSON!
}

type Mutation {
    createEvent(input: NewEvent!): Event!
}

type Query {
    events(userID: UUID!): [Event!]!
    event(eventID: UUID!): Event
}
